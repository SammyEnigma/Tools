@using JsonToEntity.Model
@model List<ClassInfo>
@{
    DisableEncoding = true;
}
@foreach (var classInfo in Model)
{
    foreach (string com in classInfo.CommentStr)
    {
        @(com.NewLine())
    }
    @("public class " + classInfo.Name.NewLine())
    @("{".NewLine())
    foreach (var field in classInfo.Fields)
    {
        foreach (string com in field.CommentStr)
        {
            @(com.Indent().NewLine())
        }
        @($"public {@field.TypeStr} {@field.Name} {{ set; get; }}".Indent().NewLine())
    }
    @("}".NewLine().NewLine())
}


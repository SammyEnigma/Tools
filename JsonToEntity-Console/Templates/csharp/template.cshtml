@using JsonToEntity.Model
@using RazorLight
@inherits TemplatePage<List<ClassInfo>>
@{
    DisableEncoding = true;
    Language = "c#"; // 如果是razor模板，那么语言选项的规则暂时就用该字段表示
}
@foreach (var classInfo in Model)
{
    foreach (var com in classInfo.CommentStr)
    {
        @(com.NewLine())
    }
    @("public class " + classInfo.Name.NewLine())
    @("{".NewLine())
    foreach (var field in classInfo.Fields)
    {
        foreach (var com in field.CommentStr)
        {
            @(com.Indent().NewLine())
        }
        @($"public {@field.TypeStr} {@field.Name} {{ set; get; }}".Indent().NewLine())
    }
    @("}".NewLine().NewLine())
}